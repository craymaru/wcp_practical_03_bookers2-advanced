<%# BOOKS SHOW --- DETAILS %>
<p id="notice"></p>
<div class='row'>
  <%# ↓ INSERT LEFT CONTENTS %>
  <%= render 'users/left_contents', book_new: @book_new, user: @book.user%>
  <%# ↑ INSERT LEFT CONTENTS END %>
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle attachment user profile_image fallback", fallback: "no_image.jpg" %>
              <%= link_to @book.user.name, user_path(@book.user), style:"margin-left:10px;" %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <i class="fa fa-comment"></i>
            <a href="#comments"><%= @book.book_comments.count %></a>
          </td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class:'btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class:'btn-sm btn-danger', "data-confirm" => "Are you sure?" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <h3>Comments</h3>
    <div class="col-xs-8 col-xs-offset-2">
      <h4 class="comment-count"><%= @book.book_comments.count %> comments</h4>
      <%# COMMENT EACH %>
      <% @book.book_comments.each do |book_comment| %>
        <table class="table">
          <tr>
            <td>
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle attachment user profile_image fallback", fallback: "no_image.jpg" %>
            </td>
            <td>
              <a href="#" class="link-author"><%= book_comment.user.name%></a>
            </td>
            <td>
              <div class="comment-entry"><%= book_comment.comment %></div>
            </td>
            <td>
              <span class="comment-meta">
                <span class="comment-date"><%= book_comment.created_at.strftime('%Y.%m.%d')%></span>
              </span>
            </td>
            <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comments_path(book_id: book_comment.book.id, book_comment_id: book_comment), method: :delete, class:'btn-sm btn-danger', "data-confirm" => "Are you sure?" %></td>
            <% end %>
          </tr>
        </table>
      <% end %>
      <%# COMMENT FORM %>
      <%= form_for [@book, @book_comment] do |f| %>
        <div class="row">
          <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "Comment" %>
          </div>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>
